  "paths": {
    "/forms": {
      "get": {
        "summary": "Get all forms",
        "description": "Get all forms",
        "operationId": "getAllForms",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/get-form"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Forms Not Found"
          }
        }
      },
      "post": {
        "summary": "Create new form",
        "description": "Create new form",
        "operationId": "createNewForm",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/post-form"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/post-form"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/form{id}": {
      "get": {
        "summary": "Get form by id",
        "description": "Get form by id",
        "operationId": "getFormById",
