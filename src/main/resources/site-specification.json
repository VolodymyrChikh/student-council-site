          },
          "full-name": {
            "type": "string",
            "example": "John Doe"
          },
          "speciality": {
            "type": "string",
            "example": "Computer Science"
          },
          "group-name": {
            "type": "string",
            "example": "CS-11"
          }
        }
      },
      "get-department": {
        "type": "object",
        "properties": {
