            "type": "string"
          },
          "form-type": {
            "type": "string"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "full-name": {
            "type": "string"
          },
          "speciality": {
            "type": "string"
          },
          "group-name": {
            "type": "string"
          }
        }
      },
      "post-form": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": "1"
          },
          "text-body": {
            "type": "string",
